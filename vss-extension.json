{
    "manifestVersion": 1,
    "id": "stack-board",
    "publisher": "elevenlabs",
    "version": "1.2.0",
    "name": "Stack Board",
    "description": "Stack board extension for Azure DevOps",
    "public": true,
    "categories": [
        "Azure Boards"
    ],
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],
    "icons": {
        "default": "azure/board.png",
        "branding": "azure/board.png"
    },
    "content": {
        "details": {
            "path": "README.md"
        },
        "license": {
            "path": "azure/license.md"
        }
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/eleven-financial/stack-board-extension"
    },
    "links": {
        "support": {
            "url": "mailto:luiz.lima@elevenfinancial.com"
        }
    },
    "scopes": [
        "vso.settings",
        "vso.profile",
        "vso.project",
        "vso.work",
        "vso.work_write",
        "vso.code_manage",
        "vso.build_execute"
    ],
    "tags": [
        "Stack",
        "Template", 
        "API Dock"
    ],
    "contributions": [
        {
            "id": "stack-board-feature",
            "type": "ms.vss-web.feature",
            "description": "Enable/Disable all Stack Board features (Projects, API Docs...)",
            "targets": [
                "ms.vss-web.managed-features"
            ],
            "properties": {
                "name": "Stack Board",
                "hostConfigurable": true,
                "defaultState": true,
                "hostScopes": ["project"]
            }
        },
        {
            "id": "stack-board-project-feature",
            "type": "ms.vss-web.feature",
            "description": "Enable/Disable Project feature (Stack Board)",
            "targets": [
                "ms.vss-web.managed-features"
            ],
            "properties": {
                "name": "Stack Board - Projects",
                "hostConfigurable": true,
                "defaultState": true,
                "hostScopes": ["project"]
            }
        },
        {
            "id": "stack-board-api-feature",
            "type": "ms.vss-web.feature",
            "description": "Enable/Disable API Docs feature (Stack Board)",
            "targets": [
                "ms.vss-web.managed-features"
            ],
            "properties": {
                "name": "Stack Board - API Docs",
                "hostConfigurable": true,
                "defaultState": true,
                "hostScopes": ["project"]
            }
        },
        {
            "id": "board-hub-group",
            "type": "ms.vss-web.hub-group",
            "targets": [
                "ms.vss-web.project-hub-groups-collection"
            ],
            "properties": {
                "name": "Stack Board",
                "order": 100,
                "icon": {
                    "light": "azure/board.png",
                    "dark": "azure/board.png"
                }
            },
            "constraints": [
                {
                    "name": "Feature",
                    "properties": {
                        "featureId": "elevenlabs.stack-board.stack-board-feature"
                    }
                }
            ]
        },
        {
            "id": "stack-board-hub",
            "type": "ms.vss-web.hub",
            "targets": [
                "elevenlabs.stack-board.board-hub-group"
            ],
            "properties": {
                "name": "Projects",
                "order": 1,
                "uri": "front/build/index.html",
                "icon": {
                    "light": "azure/projects/icon-light.png",
                    "dark": "azure/projects/icon-dark.png"
                }
            },
            "constraints": [
                {
                    "name": "Feature",
                    "properties": {
                        "featureId": "elevenlabs.stack-board.stack-board-project-feature"
                    }
                }
            ]
        },
        {
            "id": "api-docs-hub",
            "type": "ms.vss-web.hub",
            "targets": [
                "elevenlabs.stack-board.board-hub-group"
            ],
            "properties": {
                "name": "API Docs",
                "order": 2,
                "uri": "front/build/index.html",
                "icon": {
                    "light": "azure/api/icon-light.png",
                    "dark": "azure/api/icon-dark.png"
                }
            },
            "constraints": [
                {
                    "name": "Feature",
                    "properties": {
                        "featureId": "elevenlabs.stack-board.stack-board-api-feature"
                    }
                }
            ]
        },
        {
            "id": "stack-board-repos",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "tasks/stack-board-repos/build"
            }
        }
    ],
    "files": [
        {
            "path": "azure",
            "addressable": true
        },
        {
            "path": "front/build",
            "addressable": true
        },
        {
            "path": "tasks/stack-board-repos/build"
        }
    ]
}