{
    "manifestVersion": 1,
    "id": "stack-board",
    "publisher": "elevenlabs",
    "version": "1.0.30",
    "name": "Stack Board",
    "description": "Stack board extension for Azure DevOps",
    "public": true,
    "demands": ["api-version/5.1"],
    "categories": [
        "Azure Boards"
    ],
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],
    "icons": {
        "default": "marketplace/icon-light.png",
        "branding": "marketplace/icon-light.png"
    },
    "content": {
        "details": {
            "path": "marketplace/overview.md"
        },
        "license": {
            "path": "marketplace/license.md"
        }
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/eleven-financial/stack-board-extension"
    },
    "links": {
        "support": {
            "url": "mailto:luiz.lima@elevenfinancial.com"
        }
    },
    "scopes": [
        "vso.project",
        "vso.work",
        "vso.work_write",
        "vso.code_manage",
        "vso.build_execute"
    ],
    "tags": [
        "Stack",
        "Template"
    ],
    "contributions": [
        {
            "id": "stack-board-hub",
            "type": "ms.vss-web.hub",
            "targets": [
                "ms.vss-work-web.work-hub-group"
            ],
            "properties": {
                "name": "Stack Board",
                "uri": "build/index.html",
                "icon": {
                    "light": "marketplace/icon-light.png",
                    "dark": "marketplace/icon-dark.png"
                }
            }
        },
        {
            "id": "stack-board-repos",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "tasks/stack-board-repos"
            }
        }
    ],
    "files": [
        {
            "path": "marketplace",
            "addressable": true
        },
        {
            "path": "build",
            "addressable": true
        },
        {
            "path": "node_modules/vss-web-extension-sdk/lib",
            "addressable": true
        },        
        {
            "path": "tasks/stack-board-repos"
        }
    ]
}